<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coorfinalconfirm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="60dp"
                android:id="@+id/linwallet"
                android:background="@color/darkBlack"
                android:padding="20dp"
                >



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    >


                    <ImageView
                        android:id="@+id/imgpoints"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/choose_point_active"
                        android:padding="5dp"
                        android:layout_alignParentLeft="true"
                        />

                    <TextView
                        android:id="@+id/txtpoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/imgpoints"
                        android:fontFamily="@font/ralewayregular"
                        android:gravity="center"
                        android:text="sssssssss"
                        android:textColor="@color/green"
                        android:textSize="20sp"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/confirmtxt"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/ralewaymedium"
                    android:layout_margin="10dp"
                    />



                <Button
                    android:id="@+id/btn_home"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_bg"
                    android:text="@string/confirm"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:fontFamily="@font/ralewaybold"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    />

            </LinearLayout>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"

                android:src="@mipmap/done"
                android:layout_gravity="top|center"

                />
        </FrameLayout>

    </android.support.design.widget.CoordinatorLayout>

</layout>
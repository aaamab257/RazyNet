<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coorconfirm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:id="@+id/linwallet"
            android:background="@color/darkBlack"
            android:padding="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirm"
                android:textColor="@color/darkred"
                android:textSize="24sp"
                android:fontFamily="@font/ralewaybold"
                android:gravity="center"
                android:layout_margin="10dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >


                    <ImageView
                        android:id="@+id/imgpoints"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/choose_point_active"
                        android:padding="5dp"
                        android:layout_alignParentLeft="true"
                        />

                    <TextView
                        android:id="@+id/txtpoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/imgpoints"
                        android:fontFamily="@font/ralewayregular"
                        android:gravity="center"
                        android:text="sssssssss"
                        android:textColor="@color/green"
                        android:textSize="20sp"
                        />
                <ImageView
                    android:id="@+id/imgarrow"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/change"
                    android:padding="5dp"
                    android:layout_toRightOf="@+id/txtpoints"
                    />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/avatar_profile"
                    app:civ_border_color="@color/colorAccent"
                    app:civ_border_width="2dp"
                    android:layout_toRightOf="@+id/imgarrow"
                    android:layout_marginLeft="20dp"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirmtxt"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/ralewaymedium"
                android:layout_margin="10dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg_gray"
                    android:text="@string/back"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:fontFamily="@font/ralewaybold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />

                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bg"
                    android:text="@string/confirm"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:fontFamily="@font/ralewaybold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</layout>